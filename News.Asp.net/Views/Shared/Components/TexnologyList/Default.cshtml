@model IEnumerable<DTO.EntityDTO.PostDTO>


<div class="sports-top">
    <div class="s-grid-left">
        <div class="cricket">

            @foreach (var item in ViewBag.medeniyyet)
            {
                <header>
                    <h3 class="title-head">@item.Category.Name</h3>
                </header>
                <div class="s-grid-small">

                    <div class="sc-image">
                        <a href="single.html"><img src="@item.Image1" alt="" /></a>
                    </div>
                    <div class="sc-text">
                        <a class="power" href="single.html">@item.Title.Remove(50)...</a>
                        <p class="date"> @item.Time.ToString("dd-MMMM-yyyy")</p>
                       
                        <div class="clearfix"></div>
                    </div>

                    <div class="clearfix"></div>
                </div>
            }
        </div>
    </div>
    <div class="s-grid-right">
        <div class="cricket">

            @foreach(var item in ViewBag.idman)
            {
                <header>
                    <h3 class="title-popular">@item.Category.Name</h3>
                </header>

                <div class="s-grid-small">
                    <div class="sc-image">
                        <a href="single.html"><img src="@item.Image1" alt="" /></a>
                    </div>
                    <div class="sc-text">                     
                        <a class="power" href="single.html">@item.Title.Remove(50)...</a>
                        <p class="date"> @item.Time.ToString("dd-MMMM-yyyy")</p>
                        <a class="reu" href="single.html"><img src="~/web/images/more.png" alt="" /></a>
                        <div class="clearfix"></div>
                    </div>
                    <div class="clearfix"></div>
                </div>
            }
           
        </div>
    </div>
    <div class="clearfix"></div>
</div>