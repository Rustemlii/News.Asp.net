@model IEnumerable<DTO.EntityDTO.CommentDTO>


<div class="response">
	<h4>Rəylər</h4>
	<div class="media response-info">
		@foreach(var item in Model)
		{
			<div class="media-left response-text-left">
				<a href="#">
					<img class="media-object" src="images/c1.jpg" alt="" />
				</a>
				<h5><a asp-controller="Home" asp-action="Page" asp-route-id="@item.Id">@item.UserName</a></h5>
			</div>
			<div class="media-body response-text-right">
				<p>
					@item.Text
				</p>
				<ul>
					<li>@item.Time.ToString("dd-MMMM-yyyy")</li>
				</ul>
			</div>
			<div class="clearfix"> </div>
		}
		
	</div>
</div>
<div class="coment-form">
	<h4>Leave your comment</h4>
	<form>
		<input type="text" value="İstifadəçi adı "  onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'İstifadəçi adı';}" required="">
		<textarea onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Mətn...';}" required="">Mətn...</textarea>
		<input type="submit" value="Submit Comment">
	</form>
</div>
<div class="clearfix"></div>
