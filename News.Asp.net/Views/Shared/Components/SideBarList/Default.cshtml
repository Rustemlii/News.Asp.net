@model IEnumerable<DTO.EntityDTO.PostDTO>


<div class="col-md-4 side-bar">

	<div class="secound_half">
		<div class="popular-news">
			<div class="popular-grids">
				<div class="popular-grid">
					<a href="single.html">
						<img src="~/web/images/e2.jpg" alt="" 
							 style="height: 440px;" />
					</a>
				</div>
			</div>
		</div>
		<div class="popular-news">
			<header>
				<h3 class="title-popular">Məhşur xəbərlər</h3>
			</header>
			@foreach(var item in Model)
			{
				<div class="popular-grid">
					<a asp-controller="Home" asp-action="Page" asp-route-id="@item.CategoryID"><img src="@item.Image1" alt="" /></a>
					<a class="title" asp-controller="Home" asp-action="Page" asp-route-id="@item.CategoryID">
					@item.Text.Remove(100)
					</a>
					<p>
						@item.Time.ToString("dd-MMMM-yyyy") <a class="span_link" href="#">
							<span class="glyphicon glyphicon-comment"></span>0
						</a><a class="span_link"
							   href="#"><span class="glyphicon glyphicon-eye-open"></span>250 </a><a class="span_link" href="#"><span class="glyphicon glyphicon-thumbs-up"></span>68</a>
					</p>
				</div>
			}
			
		</div>
	</div>
	<div class="clearfix"></div>
</div>
